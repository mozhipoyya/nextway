{
  "hosting": {
    "public": "Nextway",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/about-us",
        "destination": "/about-us.html"
      },
      {
        "source": "/services",
        "destination": "/services.html"
      },
      {
        "source": "/contact-us",
        "destination": "/contact-us.html"
      }
    ]
  }
}